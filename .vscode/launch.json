
{
  "version": "0.1.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "--compilers",
        "js:babel-core/register",
        "--debug-brk",
        "-u",
        "tdd",
        "--timeout",
        "99999",
        "--files",
        "js/src/tests/*.js",
        "--colors",
        "${workspaceRoot}/js/src/tests/*.js"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
